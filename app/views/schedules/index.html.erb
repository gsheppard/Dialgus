<div class="row schedules_list">
    <% if !@schedules.empty? %>

      <% @schedules.each do |schedule| %>
        <div class="row">
          <div class="small-4 columns small-centered">
            <%= schedule.week_of.strftime("%b %d, %Y") %>
          </div>
        </div>
      <% end %>

    <% end %>
</div>

<div class="row">
  <%= simple_form_for @schedule do |f| %>
    <%= f.input :week_of, collection: @upcoming.map! {|d| d.strftime("%b %d, %Y")} %>

    <%= f.button :submit, 'Create' %>
  <% end %>
</div>

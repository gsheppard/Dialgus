
<div class="row">
  <div class="small-12 medium-8 columns employees">
    <h3 class="algreya">Employees</h3>

    <table>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Position</th>
        <th>Type</th>
      </tr>

      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.full_name %></td>
          <td><%= employee.email %></td>
          <td><%= employee.position.name %></td>
          <td><%= employee.work_type %></td>
        </tr>
      <% end %>
    </table>

    <%= simple_form_for @employee do |f| %>
      <div class="row">
        <div class="small-12 medium-4 columns">
          <%= f.input :first_name %>
        </div>
        <div class="small-12 medium-4 columns">
          <%= f.input :last_name %>
        </div>
        <div class="small-12 medium-4 columns">
          <%= f.association :position, collection: @positions %>
        </div>
      </div>

      <div class="row">
        <div class="small-8 columns">
          <%= f.input :email %>
        </div>
        <div class="small-4 columns">
          <%= f.input :work_type, collection: ['FT', 'PT'], as: :radio_buttons, boolean_style: :inline %>
        </div>
      </div>

      <%= f.button :submit, 'Add Employee' %>
    <% end %>
  </div>

  <div class="small-12 medium-4 columns positions">
    <h3 class="algreya">Positions</h3>

      <table>
        <% @positions.each do |position| %>
          <tr>
            <td><%= position.name %></td>
            <td><%= link_to 'Remove', '#' %></td>
          </tr>
        <% end %>
      </table>

      <%= simple_form_for @position do |f| %>
        <div class="row">
          <div class="small-8 columns"><%= f.input :name, label: false %></div>
          <div class="small-4 columns small-right"><%= f.button :submit, 'Add', class: "tiny" %></div>
      <% end %>

  </div>
</div>

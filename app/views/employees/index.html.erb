
<div class="row">
  <div class="small-12 medium-8 columns">
    <h3>Employees</h3>

    <table>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Position</th>
        <th>Type</th>
      </tr>

      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.full_name %></td>
          <td><%= employee.email %></td>
          <td><%= employee.position.name %></td>
          <td><%= employee.work_type %></td>
        </tr>
      <% end %>
    </table>

    <%= simple_form_for @employee do |f| %>
      <div class="row">
        <div class="medium-6 columns">
          <%= f.input :first_name %>
        </div>
        <div class="medium-6 columns">
          <%= f.input :last_name %>
        </div>
      </div>

      <div class="row">
        <div class="small-12 columns">
          <%= f.input :email %>
        </div>
      </div>

      <div class="small-8 medium-4 columns">
        <%= f.input :position, collection: @positions %>
      </div>
      <div class="small-8 columns">
        <%= f.input :work_type, collection: ['FT', 'PT'], as: :radio_buttons %>
      </div>
      <%= f.button :submit, 'Add Employee' %>
    <% end %>
  </div>

  <div class="small-12 medium-4 columns">
    <h3>Positions</h3>

      <table>
        <tr>
          <th>Position Name</th>
        </tr>

        <% @positions.each do |position| %>
          <tr>
            <td><%= position.name %></td>
            <td><%= link_to 'Remove', '#' %></td>
          </tr>
        <% end %>
      </table>

      <%= simple_form_for @position do |f| %>
        <%= f.input :name %>

        <%= f.button :submit, 'Add' %>
      <% end %>

  </div>
</div>

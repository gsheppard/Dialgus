source 'https://rubygems.org'
ruby '2.0.0'

gem 'rails', '4.0.4'

gem 'pg'
gem 'sass-rails', '~> 4.0.2'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-ui-rails'
gem 'jquery-rails'
gem 'jbuilder', '~> 1.2'

gem 'simple_form'
gem 'foundation-rails'
gem 'devise'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :development, :test do
  gem 'pry-rails'
  gem 'quiet_assets'
end

group :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'capybara-webkit'
  gem 'database_cleaner'
  gem 'launchy'
  gem 'shoulda'
  gem 'valid_attribute'
end

gem 'rails_12factor', group: :production
